@model IEnumerable<HungApple.Models.Discount>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminPanel";
}

<h1><strong>CHƯƠNG TRÌNH GIẢM GIÁ</strong></h1>

<p>
    <a asp-action="DiscountsCreate" class="w3-button w3-blue w3-round" style="text-decoration:none;">Thêm giảm giá</a>
</p>
<div class="w3-card w3-round w3-white">
    <table class="table">
        <thead class="table-success">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Hành động
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a asp-action="DiscountsEdit" asp-route-id="@item.Id" style="text-decoration:none;">Chỉnh sửa</a>
                                </li>
                                <li>
                                    <a asp-action="DiscountsDetails" asp-route-id="@item.Id" style="text-decoration:none;">Chi tiết</a>
                                </li>
                                <li>
                                    <a asp-action="DiscountsDelete" asp-route-id="@item.Id" style="text-decoration:none;">Xóa</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

